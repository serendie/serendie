{
  "private": true,
  "name": "serendie",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "storybook": "npm run storybook -w @serendie/ui",
    "build:storybook": "npm run build:storybook -w @serendie/ui",
    "build": "npm run build:ui && npm run build:mcp",
    "build:ui": "npm run build -w @serendie/ui",
    "build:mcp": "npm run build -w @serendie/mcp-server",
    "dev": "npm run dev:ui",
    "dev:ui": "npm run storybook -w @serendie/ui",
    "dev:mcp": "npm run dev -w @serendie/mcp-server",
    "test:ui": "npm run test -w @serendie/ui",
    "test:mcp": "npm run test -w @serendie/mcp-server",
    "test": "npm run test:ui",
    "start:mcp": "npm start -w @serendie/mcp-server"
  },
  "workspaces": [
    "ui",
    "mcp-server"
  ],
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.8.0",
    "@pandacss/eslint-plugin": "^0.1.1",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.8",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "tsx": "^4.19.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.14.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@serendie/design-token": "^1.0.0",
    "@swc/core": "^1.10.0",
    "@swc/jest": "^0.2.37",
    "fastify": "^5.2.2"
  }
}
