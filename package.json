{
  "private": true,
  "name": "serendie",
  "version": "0.0.1",
  "scripts": {
    "prepare": "npm run build:ui",
    "storybook": "npm run storybook -w @serendie/ui",
    "build": "npm run build:site",
    "build:ui": "npm run build --workspace @serendie/ui",
    "build:site": "npm run build --workspace @serendie/site",
    "dev:site": "npm run dev --workspace @serendie/site",
    "dev:example": "npm run dev --workspace @serendie/example",
    "dev:ui": "npm run dev --workspace @serendie/ui",
    "test:ui": "npm run test --workspace @serendie/ui",
    "dev": "npm run dev:example && npm run dev:ui",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "workspaces": [
    "ui",
    "apps/*",
    "design-tokens"
  ],
  "devDependencies": {
    "@pandacss/eslint-plugin": "^0.1.1"
  }
}