{
  "name": "@serendie/design-token",
  "description": "the design tokens of Serendie",
  "version": "0.2.0",
  "type": "module",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "tsx buildTokens.ts",
    "sync-json-to-figma": "sync-to-figma",
    "ci:sync-json-to-figma": "sync-to-figma --silent",
    "release": "release-it --config ../.release-it.json"
  },
  "devDependencies": {
    "@serendie/style-dictionary-formatter": "^0.0.2",
    "release-it": "^17.11.0",
    "style-dictionary": "^3.9.2",
    "style-dictionary-utils": "^2.0.7"
  },
  "dependencies": {
    "@serendie/figma-utils": "^0.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.5.3"
  },
  "exports": {
    ".": {
      "import": "./dist/tokens.js",
      "types": "./dist/tokens.d.ts"
    },
    "./panda": {
      "import": "./dist/panda-tokens.js",
      "types": "./dist/panda-tokens.d.ts"
    },
    "./token-list": {
      "import": "./dist/token-list.js",
      "types": "./dist/token-list.d.ts"
    },
    "./tokens.css": "./dist/tokens.css"
